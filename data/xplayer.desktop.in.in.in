[Desktop Entry]
_Name=Xplayer
_Comment=Play movies
_Keywords=Video;Movie;Film;Clip;Series;Player;DVD;TV;Disc;
Exec=xplayer %U
Icon=xplayer
Terminal=false
Type=Application
Categories=GTK;GNOME;AudioVideo;Player;Video;
@MIMETYPES@
X-GNOME-DocPath=xplayer/xplayer.xml
X-GNOME-Bugzilla-Bugzilla=GNOME
X-GNOME-Bugzilla-Product=xplayer
X-GNOME-Bugzilla-Component=general
X-GNOME-Bugzilla-Version=@VERSION@
X-GNOME-Bugzilla-OtherBinaries=xplayer-video-thumbnailer;xplayer-audio-preview;
X-GNOME-Bugzilla-ExtraInfoScript=@FULL_LIBEXECDIR@/xplayer/xplayer-bugreport.py
StartupNotify=true
Actions=Play;Next;Previous;Mute;Fullscreen;

[Desktop Action Play]
_Name=Play/Pause
Exec=xplayer --play-pause
OnlyShowIn=Unity;

[Desktop Action Next]
_Name=Next
Exec=xplayer --next
OnlyShowIn=Unity;

[Desktop Action Previous]
_Name=Previous
Exec=xplayer --previous
OnlyShowIn=Unity;

[Desktop Action Mute]
_Name=Mute
Exec=xplayer --mute
OnlyShowIn=Unity;

[Desktop Action Fullscreen]
_Name=Fullscreen
Exec=xplayer --fullscreen
OnlyShowIn=Unity;
